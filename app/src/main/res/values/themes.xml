<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TaskPlanner" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_500</item>
        <item name="colorSecondaryVariant">@color/teal_500</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:tagertApi="l">?attr/colorPrimaryVariant</item>

    </style>

    <style name="Theme.TaskPlanner" parent="Base.Theme.TaskPlanner" />


    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_round</item>
        <item name="windowSplashScreenAnimationDuration">2500</item>
        <item name="postSplashScreenTheme">@style/Theme.TaskPlanner</item>
        <item name="windowSplashScreenBackground">@color/green_500</item>
    </style>
    
    <style name="CustomTabLayout" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/oswald</item>
    </style>

    <style name="ButtonTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="background">@drawable/background_button_task</item>
        <item name="android:backgroundTint">@null</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>